{{#> base}}

    <h1>{{title}}</h1>

    <style>body{background-color:lightblue}</style><!--esto no tiene que estar aca-->

    <div class="loginPageHeader">
			<img src="/assets/img/mealsavior.png" />
			<div class="subtitle">
				<p>Open your fridge, select your ingredients</p>
			</div>
		</div>

		 <div class="containerLogin">
			 <div class="sliderSection" id="sliderContainer">
				{{#> slider}}
				{{/slider}}
			 </div>

			<form class="loginSection" id="loginForm" method="post">
				<h2>Welcome!</h2>
				<div class="userOptionsContainer">
					<button class="userOptionBtn" id="guestOptionBtn">
						<img src="/assets/img/icons/plate.png" />
						<p>Guest</p>
					</button>
					<button class="userOptionBtn" id="userOptionBtn">
						<img src="/assets/img/icons/reception.png" />
						<p>Log in</p>
					</button>
				</div>
				<div id="userInput">
					<input class="login-input" type="text" name="userName" placeholder="Username" required />
					<input class="login-input" type="password" name="password" placeholder="Password" required />
				</div>
				<a class="signUpLink" href="./signup">Don't you have an account? Sign up!</a>
				<div class="g-signin2" data-width="225" data-height="50" data-longtitle="true"></div>
				<input class="login-input" type="submit" value="Log In" id="submitBtn" />
			</form>
		</div>

		<script src="/js/pages/login.js" type="module"></script>
		<script src="/js/utils/googlelogin.js" async defer></script>
		<script src="https://apis.google.com/js/platform.js" async defer></script>
		<script
			src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"
			integrity="sha384-p34f1UUtsS3wqzfto5wAAmdvj+osOnFyQFpp4Ua3gs/ZVWx6oOypYoCJhGGScy+8"
			crossorigin="anonymous"></script>
		<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

{{/base}}